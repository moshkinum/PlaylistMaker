<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_61"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="@dimen/width_45"
        android:layout_height="@dimen/width_45"
        android:layout_marginStart="@dimen/margin_13"
        android:layout_marginVertical="@dimen/margin_8"
        tools:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/margin_14"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:orientation="vertical">

        <TextView
            style="@style/TitleStyle.Regular16"
            android:id="@+id/tvTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Yesterday (Remastered 2009)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_13"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_1"
            android:orientation="horizontal">

            <TextView
                style="@style/SubtitleStyle"
                android:id="@+id/tvArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="The Beatles" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_circle" />

            <TextView
                style="@style/SubtitleStyle"
                android:id="@+id/tvTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2:55" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_12"
        app:tint="?attr/colorOnSecondaryFixed"
        android:src="@drawable/ic_arrow_forward" />

</LinearLayout>
