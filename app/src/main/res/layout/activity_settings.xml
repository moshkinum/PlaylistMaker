<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/ToolbarStyle.WithBackArrow"
        android:id="@+id/tbSettings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        android:layout_marginBottom="@dimen/margin_24"
        app:title="@string/settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        style="@style/SettingsItemStyle.SwitchMaterial"
        android:id="@+id/swTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:text="@string/dark_theme" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/SettingsItemStyle"
        android:id="@+id/tvShareApp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:text="@string/share_app"
        android:drawableEnd="@drawable/ic_share" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/SettingsItemStyle"
        android:id="@+id/tvWriteToSupport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:text="@string/write_to_support"
        android:drawableEnd="@drawable/ic_support" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/SettingsItemStyle"
        android:id="@+id/tvUserAgreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:text="@string/user_agreement"
        android:drawableEnd="@drawable/ic_arrow_forward" />

</LinearLayout>