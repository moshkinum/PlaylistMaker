<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="YsDisplayMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="YsDisplayMedium.22">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="YsDisplayMedium.19">
        <item name="android:textSize">@dimen/text_size_19</item>
    </style>

    <style name="YsDisplayMedium.14">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="YsDisplayRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="YsDisplayRegular.22">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="YsDisplayRegular.16">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="YsDisplayRegular.14">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="YsDisplayRegular.13">
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="YsDisplayRegular.11">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="ToolbarStyle">
        <item name="contentInsetStart">0dp</item>
        <item name="titleTextAppearance">@style/YsDisplayMedium.22</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ToolbarStyle.WithBackArrow">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/margin_8</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="ButtonLargeStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/YsDisplayMedium.22</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_8</item>
        <item name="iconTint">@color/grey_900</item>
    </style>

    <style name="ButtonSmallStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/YsDisplayMedium.14</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/radius_54</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="drawableTint">?attr/colorOnSecondaryFixed</item>
        <item name="android:textAppearance">@style/YsDisplayRegular.16</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SettingsItemStyle.SwitchMaterial">
        <item name="android:paddingEnd">@dimen/padding_6</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_40</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textAppearance">@style/YsDisplayRegular.16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:drawableStart">@drawable/ic_search_small</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="IconClearSearchStyle">
        <item name="android:paddingVertical">@dimen/padding_10</item>
        <item name="android:paddingHorizontal">@dimen/padding_12</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TitleStyle.Medium22">
        <item name="android:textAppearance">@style/YsDisplayMedium.22</item>
    </style>

    <style name="TitleStyle.Medium14">
        <item name="android:textAppearance">@style/YsDisplayMedium.14</item>
    </style>

    <style name="TitleStyle.Regular16">
        <item name="android:textAppearance">@style/YsDisplayRegular.16</item>
    </style>

    <style name="AttributeTitleStyle">
        <item name="android:textAppearance">@style/YsDisplayRegular.13</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="AttributeValueStyle">
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/YsDisplayRegular.13</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/YsDisplayRegular.11</item>
        <item name="android:textColor">?attr/colorOnSecondaryFixed</item>
    </style>


    <style name="CaptionStyle">
        <item name="android:textAppearance">@style/YsDisplayMedium.19</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>